@using SmartAdminMvc.ViewModels
@model EnterpriseInfoViewModel
			<!-- MAIN CONTENT -->
<div id="content">

    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="fa fa-money fa-fw "></i>
                Nómina
            </h1>
        </div>
    </div>

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                <!-- Widget ID (each widget will need unique ID) EXCEL-->
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-0"
                     data-widget-colorbutton="true"
                     data-widget-editbutton="true"
                     data-widget-togglebutton="true"
                     data-widget-deletebutton="true"
                     data-widget-fullscreenbutton="true"
                     data-widget-custombutton="true"
                     data-widget-collapsed="false"
                     data-widget-sortable="true">
                    <!-- widget options:
                    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                    data-widget-colorbutton="false"
                    data-widget-editbutton="false"
                    data-widget-togglebutton="false"
                    data-widget-deletebutton="false"
                    data-widget-fullscreenbutton="false"
                    data-widget-custombutton="false"
                    data-widget-collapsed="true"
                    data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Nóminas</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <a data-toggle="modal" onclick="showModal('#newModal', '#newModalBody', @Model.Id)" style="cursor: pointer">Nueva Nómina</a>
                            <table id="datatable_tabletools" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-hide="phone">Fecha Inicial</th>
                                        <th data-hide="phone">Fecha Final</th>
                                        <th data-class="expand">Acción</th>
                                        <th data-hide="phone">Estado</th>
                                        <!--<th data-hide="phone">Aniversario</th>-->
                                        <th data-hide="phone">Detalle</th>
                                        <th data-hide="phone">Descarga</th>
                                        <th data-hide="phone">Número de Facturas por Nómina</th>
                                        <th data-hide="phone">Usuario que aprobó</th>
                                        <th data-hide="phone">Fecha de Aprobación</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.PayDays) {
                                        <tr>
                                            <td style="vertical-align: middle">@item.StartDate</td>
                                            <td style="vertical-align: middle">@item.Date</td>
                                            <td style="vertical-align: middle">
                                                @Html.ActionLink("Detalle", "Detalle", new {@id = item.Id}) <br/>
                                                @Html.ActionLink("Detalle con percepciones y deducciones", "DetalleFull", new {@id = item.Id })<br/>
                                                @Html.ActionLink("Total por departamentos", "Totales", new {@id = item.Id })<br/>
                                                @Html.ActionLink("Resumen", "Resumen", new {@id = item.Id })<br/>
                                                <!--@Html.ActionLink("Días Pagados", "Dias", new {@id = item.Id })<br/>-->
                                            </td>
                                            <td style="vertical-align: middle">@item.Authorized</td>
                                            <td style="vertical-align: middle">
                                                <h3>
                                                    <i class="fa fa-print fa-fw editor_edit"></i>
                                                </h3>
                                            </td>
                                            <td style="vertical-align: middle">
                                                <h3>
                                                    <i class="fa fa-file-excel-o fa-fw editor_edit"></i>
                                                </h3>
                                            </td>
                                            <td style="vertical-align: middle">@item.Employees</td>
                                            <td style="vertical-align: middle">@item.Authorizer</td>
                                            <td style="vertical-align: middle">@item.AuthorizationDate</td>
                                        </tr>
                                    }
                                    <tr>
                                        <td style="vertical-align: middle">Ago 31 2015</td>
                                        <td style="vertical-align: middle">Ago 31 2015</td>
                                        <td style="vertical-align: middle">
                                            @Html.ActionLink("Detalle", "Detalle", new { @id = 1 }) <br/>
                                            @Html.ActionLink("Detalle con percepciones y deducciones", "DetalleFull", new { @id = 1 })<br />
                                            @Html.ActionLink("Total por departamentos", "Totales", new { @id = 1 })<br />
                                            @Html.ActionLink("Resumen", "Resumen", new { @id = 1 })<br />
                                            @Html.ActionLink("Días Pagados", "Dias", new { @id = 1 })<br />
                                        </td>
                                        <td style="vertical-align: middle">Aprobada</td>
                                        <td style="vertical-align: middle">
                                            <h3>
                                                <i class="fa fa-print fa-fw editor_edit"></i>
                                            </h3>
                                        </td>
                                        <td style="vertical-align: middle">
                                            <h3>
                                                <i class="fa fa-file-excel-o fa-fw editor_edit"></i>
                                            </h3>
                                        </td>
                                        <td style="vertical-align: middle">15</td>
                                        <td style="vertical-align: middle">Admin</td>
                                        <td style="vertical-align: middle">Ago 31 2015</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- end row -->

    </section>
    <!-- end widget grid -->
    <div class="modal fade" id="newModal" data-url='@Url.Action("_Nueva", "Nominas")' tabindex="-1" role="dialog">
        <div id="newModalBody"></div>
    </div>
    <div class="modal fade" id="deleteModal" data-url='@Url.Action("_Autorizar", "Nominas")' tabindex="-1" role="dialog">
        <div id="deleteModalBody"></div>
    </div>
</div>
<!-- END MAIN CONTENT -->
@section pagespecific {
    <script type="text/javascript">

     function showModal(modalContainerId, modalBodyId, id) {
         var url = $(modalContainerId).data('url');
         $.get(url, { id: id }, function (data) {
             $(modalBodyId).html(data);
             $(modalContainerId).modal('show');
         });

     }
    // DO NOT REMOVE : GLOBAL FUNCTIONS!
    var editor;
    $(document).ready(function () {


        /* // DOM Position key index //

        l - Length changing (dropdown)
        f - Filtering input (search)
        t - The Table! (datatable)
        i - Information (records)
        p - Pagination (paging)
        r - pRocessing
        < and > - div elements
        <"#id" and > - div with an id
        <"class" and > - div with a class
        <"#id.class" and > - div with an id and class

