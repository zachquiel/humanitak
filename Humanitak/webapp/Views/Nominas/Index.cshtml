        var responsiveHelper_datatable_tabletools = undefined;

        var breakpointDefinition = {
            tablet: 1024,
            phone: 480
        };


        function newTask() {

            var myModal = $('#myModal');
            $.get('/Empresas/Nueva', function (data) {
                $('#mydiv2').html(data);
