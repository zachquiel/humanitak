@using SmartAdminMvc.ViewModels
@model AccountRegistrationViewModel
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" id="laX" aria-hidden="true">
                &times;
            </button>
            <h4 class="modal-title">
                Nuevo Usuario
            </h4>
        </div>
        <div id="partialContent" class="modal-body no-padding">
            @Html.Partial("_NuevoMain", Model)
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<script type="text/javascript">
    $("#laX").on("click", function () {
        $("#newModal").modal('hide');
        location.reload();
    });
</script>